{
  // ruff format on save is configured in metta.code-workspace
  "[python]": {
    "editor.rulers": [
      120
    ],
    "editor.renderWhitespace": "trailing"
  },
  "files.exclude": {
    "**/*.egg-info": true,
    "**/__pycache__": true,
    "replays": true,
    "train_dir": true,
    "outputs": true,
    ".pytest_cache": true,
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/.idea": true,
    "**/.vscode": true,
    "**/*.pyc": true,
    "**/*.pyo": true,
    "**/*.pyd": true,
    "**/*.so": true,
    "**/*.dylib": true,
    "**/*.dll": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/.git": true,
    "**/.DS_Store": true,
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/*.pyo": true,
    "**/*.pyd": true,
    "**/*.so": true,
    "**/*.dylib": true,
    "**/*.dll": true
  },
  "python.testing.unittestArgs": [
    "-v",
    "-s",
    "./tests",
    "-p",
    "test_*.py"
  ],
  "python.analysis.typeCheckingMode": "basic",
  "python.testing.pytestEnabled": false,
  "python.testing.unittestEnabled": true,
  "[yaml]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": true
    },
    "editor.autoIndent": "keep"
  }
}
